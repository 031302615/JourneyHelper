<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>

<package name="fzu" extends="json-default">


		<action name="login" class="loginAtion"
			method="login">
			<interceptor-ref name="json" />
			<!-- 登录成功 -->
			<result name="success" type="json">
				<param name="excludeProperties">userName,passWord,user.passWord</param>
				<param name="root">user</param>
				<!-- <param name="root">users</param> -->
				<!-- <param name="excludeNullProperties">true</param> -->
				<!-- <param name="includeProperties">users.*</param> -->
			</result>

			<!-- 登录失败 -->
			<result name="error" type="json">
				<param name="root">user</param>
			</result>

		</action>

		<action name="regist" class="registAtion"
			method="regist">
			<result name="success" type="json">
				<param name="excludeProperties">userName,passWord,user.passWord</param>
				<param name="root">user</param>
			</result>
		</action>

	</package>

</struts>    

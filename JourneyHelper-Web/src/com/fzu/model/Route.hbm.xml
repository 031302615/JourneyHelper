<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="com.fzu.model">

	<class name="Route" table="route" discriminator-value="1">
		<cache usage="read-only" />

		<id name="id">
			<generator class="identity" />
		</id>

		<property name="title" type="string" />
		<property name="createTime" type="date" />
		<property name="beginTime" type="date" />
		<property name="endTime" type="date" />
		<property name="property" type="string" />
		<property name="type" type="string" />
		<property name="strong" type="string" />
		<property name="imageurl" type="string" />
		<property name="summary" type="string" />
		<property name="content" type="string" />

		<many-to-one name="createUser" cascade="all" class="User"
			column="id">
		</many-to-one>

		<set name="teamrecod" table="user_route">
			<key column="id" />
			<many-to-many class="User" column="id" />
		</set>

	</class>


</hibernate-mapping>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="com.fzu.model">

	<class name="User" table="user">

		<id name="id" type="integer" column="user_id">
			<generator class="identity" />
		</id>

		<property name="userId" type="string" />
		<property name="userName" type="string" />
		<property name="passWord" type="string" />
		<property name="nickName" type="string" />
		<property name="Email" type="string" />
		<property name="Telephone" type="string" />
		<property name="headUrl" type="string" />


		<!-- 用户行程列表和行程是N-N关系 -->
		<set name="routelist" table="user_route" lazy="false">
			<key column="user_id" />
			<many-to-many class="Route" column="route_id" />
		</set>
		<!-- -->

		<!-- 创建者与行程条是1-N关系 -->
		<set name="createlist" lazy="false">
			<key column="user_id" />
			<one-to-many class="Route" />
		</set>


		<set name="imageList" lazy="false">
			<key column="user_id" />
			<one-to-many class="Image" />
		</set>

	</class>

</hibernate-mapping>

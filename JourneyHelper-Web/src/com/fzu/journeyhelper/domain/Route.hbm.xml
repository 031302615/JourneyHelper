<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="com.fzu.model">

	<class name="Route" table="route">
		<id name="id" type="integer" column="route_id">
			<generator class="identity" />
		</id>
 
		<property name="title" type="string" />
		<property name="createTime" type="date" />
		<property name="beginTime" type="date" />
		<property name="endTime" type="date" />
		<property name="property" type="string" />
		<property name="type" type="string" />
		<property name="strong" type="string" />
		<property name="imageurl" type="string" />
		<property name="summary" type="string" />
		<property name="content" type="string" />

		<many-to-one name="createUser" class="User"/>

		<!-- 一个行程中有多个规划 -->
		<set name="itinerarys">
			<key column="route_id"/>
			<one-to-many class="Itinerary"/>
		</set>

		<!-- 一个行程中有多个队员 -->
		<set name="teamrecod" table="user_route">
			<key column="route_id" />
			<many-to-many class="User" column="user_id" />
		</set>


		<set name="imageList">
			<key column="route_id"/>
			<one-to-many class="Image"/>
		</set>

	</class>
</hibernate-mapping>

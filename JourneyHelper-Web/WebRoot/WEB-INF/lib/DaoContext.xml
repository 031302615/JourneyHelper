<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx.xsd"
	xmlns:tx="http://www.springframework.org/schema/tx">


	<bean id="daoTemplate" abstract="true" lazy-init="true"
		p:sessionFactory-ref="sessionFactory" />

	<bean id="userDao" class="com.fzu.dao.UserDaoHibernate" parent="daoTemplate" />

	<bean id="routeDao" class="com.fzu.dao.RouteDaoHibernate" parent="daoTemplate" />

	<bean id="itineraryDao" class="com.fzu.dao.ItineraryDaoHibernate"
		parent="daoTemplate" />

	<bean id="imageDao" class="com.fzu.dao.ImageDaoHibernate" parent="daoTemplate" />


</beans>
